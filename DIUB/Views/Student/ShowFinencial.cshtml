@model IEnumerable<DIUB.Models.Tbl_SemesterCost>

@{
    ViewBag.Title = "ShowFinencial";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}




<table class="table">
    <tr>
        
        <th>
            Semester
        </th>
        <th>
           Credit
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AmountPaid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Due)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.Tbl_Semester.SemesterName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreditTaken)
        </td>
      
        <td>
            @Html.DisplayFor(modelItem => item.Total)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AmountPaid)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Due)
        </td> 
       
        <td>
            @Html.ActionLink("Details", "ShowSemesterCost", new {  id=item.SemesterCostID  }) 
          
        </td>
    </tr>
}

</table>
