@model IEnumerable<DIUB.Models.Tbl_Registration>

@{
    ViewBag.Title = "ShowclassSchedule";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}
<hr />
<div>
    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" >Registration <b class="caret"></b></button>
    <ul class="dropdown-menu">
        @{
            List<SelectListItem> data = ViewBag.SemesterList;
        }
        @if (data != null)
        {
            foreach (var item in data)
            {
                <li><a href="@Url.Action("RegistaredShow","Student", new { semesterID = item.Value})"> @item.Text </a></li>
            }
        }

        <li class="divider"></li>
       
    </ul>
</div>
<hr />
<h2>class Routine</h2>


<table class="table">
    <tr>

        <th>
            Subject
        </th>

        <th>
            Course Teacher
        </th>
        <th>
           Day
        </th>
        <th>
            Time
        </th>


        <th>
            Day
        </th>
        <th>
           Time
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>

        <td>
            <a href=""> @Html.DisplayFor(modelItem => item.SubjectName)- @Html.DisplayFor(modelItem => item.SectionName)</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tbl_Teacher1.FirstName) @Html.DisplayFor(modelItem => item.Tbl_Teacher1.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Day1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClassStart)- @Html.DisplayFor(modelItem => item.ClassEnd)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Day2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClassStart2)- @Html.DisplayFor(modelItem => item.ClassEnd2)
        </td>

        <td>
            @Html.ActionLink("Subject Details", "ShowSubjectStudent", new { sectionID = item.SectionID })
        </td>

        <td>
            @Html.ActionLink("Notes", "SeeNotes", new {  id = item.SectionID })
        </td>

    </tr>
}

</table>
