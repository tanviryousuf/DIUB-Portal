
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - DIUB Portal </title>
    <link href="~/Content/MyMainLayout.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.js" type="text/javascript"></script>
    <link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.css" rel="stylesheet" type="text/css" />

    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-6">
                <div class="logo" href="#">
                    <img src="~/Images/logo1.png" width="100" height="70" alt="">
                </div>
            </div>

            <div class="col-md-6 col-sm-6 col-xs-6">

                <ul class="nav navbar-nav navbar-right"></ul>

            </div>
        </div>
        <div class="row">

            <div class="col-md-12">
                <div class="nav-menus">

                    <ul class="nav nav-pills">


                        <li class="active" style="border-radius:initial;">@Html.ActionLink("DIUB Portal", "Index", "Home") </li>
                        <li style="border-radius:initial;">@Html.ActionLink("Offer Semester", "AddSemester", "AdministrationOfficial")</li>
                        <li style="border-radius:initial;">@Html.ActionLink("Offer Subjcet", "AddSubject", "AdministrationOfficial")</li>
                        <li style="border-radius:initial;">@Html.ActionLink("Offer Section", "AddSection", "AdministrationOfficial")</li>
                        <li>
                            <!-- Example single danger button -->
                            <div class="btn-group">
                                <button type="button" class="btn btn-dark dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Register
                                </button>
                                <div class="dropdown-menu" style="background-color:darkgray">
                                    <button type="button" class="btn btn-dark dropdown-item" href="">@Html.ActionLink("Teacher", "TeacherRegister", "AdministrationOfficial")</button><hr />
                                    <button type="button" class="btn btn-dark dropdown-item" href="#">@Html.ActionLink("Student", "StudentRegister", "AdministrationOfficial")</button><hr />

                                    <button type="button" class="btn btn-dark dropdown-item" href="#">@Html.ActionLink("Employee", "EmployeeRegister", "AdministrationOfficial")</button><hr />



                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="#">Separated link</a>
                                </div>
                            </div>
                        </li>
                        <li class="pull-right">
                            <form method="post">
                                <div class="olSearch fr">
                                    <input type="text" name="search" placeholder="Category/Product Name" class="inputComn houseText form-control" style="height:43.5px;" />
                                    <div class="searchIcon">
                                        <button type="submit" class="searchBtn">
                                            <i class="fa fa-search" aria-hidden="true"></i>
                                        </button>
                                    </div>


                                </div>
                            </form>
                        </li>


                    </ul>

                </div>
            </div>

        </div>


        @RenderBody()
        <hr />
        <footer>
            <div class="row">
                <div class="col-md-12 copyright">

                    <div class="col-md-6 col-sm-6 copyright-left">
                        <p>&copy; @DateTime.Now.Year - DIUB. All right reserved.</p>
                    </div>

                    <div class="col-md-6 col-sm-6 copyright-right">

                        <ul class="list-unstyled list-social">
                            <li><a href="#" target="_blank"><i class="fa fa-facebook-square"></i></a></li>
                            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="#"><i class="fa fa-google-plus"></i></a></li>

                        </ul>
                    </div>
                </div>
            </div>

        </footer>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
