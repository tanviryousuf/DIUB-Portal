<!DOCTYPE html>

<html>
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - DIUB Portal </title>
    <link href="~/Content/MyMainLayout.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.js" type="text/javascript"></script>
    <link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.css" rel="stylesheet" type="text/css" />

    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div>
        <nav class="navbar navbar-expand-lg navbar-light " style="background-color:#10b354">
            <a class="navbar-brand" href="#" style="margin-left:20px;">
                <img src="~/Images/logo.png" width="100" height="80" class="d-inline-block align-top" alt="">

            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">

                    <li class="nav-item" style="margin-left:20px;background-color: #068f3f">
                        <a class="nav-link" href="#">BookList</a>
                    </li>
                    <li class="nav-item dropdown" style="margin-left:20px;background-color: #068f3f">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="background-color: #068f3f">
                            Books
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="@Url.Action("BookNew","Library")">New Books</a>
                            <a class="dropdown-item" href="@Url.Action("BookNew","Library")">Old Books</a>
                            <a class="dropdown-item" href="@Url.Action("BookAdd","Library")">Add new Books</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Add Category</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown" style="margin-left:20px;background-color: #068f3f">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Library
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="@Url.Action("Request","Library")">Request</a>
                            <a class="dropdown-item" href="@Url.Action("CattegoryAdd","Library")">New Category</a>
                            <a class="dropdown-item" href="@Url.Action("ReturnBook","Library")">New Category</a>
                            <a class="dropdown-item" href="@Url.Action("RequestOfBooks","Library")">New Category</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="@Url.Action("Request","Library")">Borrower</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown" style="margin-left:20px;background-color: #068f3f">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Messages
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="#">MailBox</a>
                            <a class="dropdown-item" href="#">Director</a>
                            <a class="dropdown-item" href="#">Chat</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Something else here</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown" style="margin-left:20px;background-color: #068f3f">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Notifications
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="#">Action</a>
                            <a class="dropdown-item" href="#">Another action</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Something else here</a>
                        </div>
                    </li>
                    <li class="nav-item" style="margin-left:20px;background-color: #068f3f">
                        <a class="nav-link disabled" href="#" tabindex="-1">Disabled</a>
                    </li>
                    <li class="nav-item active" style="margin-left:20px; background-color: #068f3f">
                        <a class="nav-link" href="#">Profile</a>
                    </li>

                    <li class="nav-item active" style="margin-left:20px; background-color: #068f3f">
                        <a class="nav-link" href="@Url.Action("Logout","Accounts")">Logout</a>
                    </li>
                    <li class="pull-right" style="margin-left:20px; background-color: #068f3f">
                        <form method="post">
                            <div class="olSearch fr">
                                <input type="text" name="search" placeholder="Books/Category" class="inputComn houseText form-control" style="height:43.5px;" />
                                <div class="searchIcon">
                                    <button type="submit" class="searchBtn">
                                        <i class="fa fa-search" aria-hidden="true"></i>
                                    </button>
                                </div>


                            </div>
                        </form>
                    </li>
                </ul>

            </div>
        </nav>
        @RenderBody()
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
