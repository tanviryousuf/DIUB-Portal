@model IEnumerable<DIUB.Models.Tbl_PreStudent>

@{
    ViewBag.Title = "StudentRegistrationConfirm";
    Layout = "~/Views/Shared/_DirectorLayout.cshtml";
}

<h2>StudentRegistrationConfirm</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Picture)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Tbl_Department.DepartmentName)
        </th>
      

        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
       
      
        <th>
            @Html.DisplayNameFor(model => model.BloodGroup)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AdmissionDate)
        </th>
      
      
        

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="~/StudentImage/@Url.Content(item.Picture)" height="60" width="60" /> 
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.StudentID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Tbl_Department.DepartmentName)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
     
        <td>
            @Html.DisplayFor(modelItem => item.BloodGroup)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AdmissionDate)
        </td>
      
       

       
        <td>
            @Html.ActionLink("Confirm", "ConfirmStudent", new { id=item.ConfrimID  }) |
            @Html.ActionLink("Details", "StudentDetails", new { id = item.ConfrimID }) |
            @Html.ActionLink("Cancel", "Cancel", new { id = item.ConfrimID })
        </td>
    </tr>
}

</table>
